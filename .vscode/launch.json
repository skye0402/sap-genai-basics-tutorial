{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (.venv, Unix)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${fileDirname}/.venv/bin/python"
        },
        {
            "name": "Python: Current File (.venv, Windows)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${fileDirname}\\.venv\\Scripts\\python.exe"
        }
    ]
}